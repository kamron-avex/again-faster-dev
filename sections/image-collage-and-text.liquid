<div class="container-fluid image-collage-container">
<div class="row">

    <div class="col-7">
        <img class="image-collage-container_large-image" src="{{ section.settings.large_image | img_url: "master" }}" />
    </div>

    <div class="image-collage-container_content col-5">

        <img class="image-collage-container_small-image" src="{{ section.settings.small_image | img_url: "master" }}" />

        <div class="image-collage-container_content_text">

            <h5 class="image-collage-container_content_text-subheading">{{ section.settings.subheader }}</h5>
            <h3 class="image-collage-container_content_text-heading">{{ section.settings.heading }}</h3>
            <p class="image-collage-container_content_text-body">{{ section.settings.body }}</p>

            {% if section.settings.button_label and section.settings.button_link %}
                <a href={{ section.settings.button_link }} class="image-collage-container_content_text-button" >
                    {{ section.settings.button_label }}
                </a>
            {% endif %}
        </div>
    </div>
</div>
</div>
  
<style>


.image-collage-container {
    width: 100%;
    height: 1024px;


    {% if section.settings.large_image_position == 'left' %}
    direction: ltr;
    {% else %}
    direction: rtl;
    {% endif %}
}

.image-collage-container_large-image {
    width: 100%;
    height: 100%;

    object-fit: cover;
}

.image-collage-container_content {
    padding-top: 60px;
    padding-left: 65px;
    padding-right: 85px;

    box-sizing: border-box;
}

.image-collage-container_content_text {
    width: 100%;

    {% if section.settings.large_image_position == 'left' %}
    text-align: left;
    {% else %}
    text-align: right;
    {% endif %}
}

.image-collage-container_small-image {
    width: 100%;
    height: 100%;

    object-fit: cover;
    margin-bottom: 45px;

}

.image-collage-container_content_text-subheading {
    /* 1440/H5 */
    font-family: "Oswald";
    font-style: normal;
    font-weight: 300;
    font-size: 12px;
    line-height: 168%;
    /* or 20px */
    letter-spacing: 0.16em;
    text-transform: uppercase;

    /* Primary/Black */
    color: #000000;
}

.image-collage-container_content_text-heading {
    /* 1440/H3(Bold) */
    font-family: "Open Sans";
    font-style: normal;
    font-weight: 600;
    font-size: 24px;
    line-height: 130%;
    /* or 31px */
    letter-spacing: 0.08em;
    text-transform: uppercase;

    /* AF/Black */
    color: #000000;
}

{% assign button = "image-collage-container_content_text-button" %}
.{{button}} {

    /* button/primary */
    font-family: "Open Sans";
    font-style: normal;
    font-weight: normal;
    font-size: 12px;
    line-height: 16px;
    letter-spacing: 0.175em;
    text-transform: uppercase;

    /* Primary/Black */
    color: #000000;

    position: relative;

}

.{{ button }}::after {
    content: '';

    position: absolute;
    bottom: -9px;
    left: 0;

    height: 100%;
    width: 70%;

    border-bottom: 1px solid #000;
    transition: all .4s;

}

.{{ button }}:hover { color: #000; text-decoration: none; }
.{{ button }}:hover::after { width: 100%; }

/* Responsive */
@media screen and (max-width: 1920px) {



}
@media screen and (max-width: 1440px) {

    .image-collage-container_small-image {
        max-width: 462px;
        max-height: 628px;
    }

}
@media screen and (max-width: 768px) {
    .image-collage-container_small-image {
        max-width: 254px;
        max-height: 345px;
    }
}

</style>
  
  {% schema %}
  {
    "name": "Image Collage",

    "settings": [


        /* Images Config */
        { "type": "header", "content": "Images" },

        {
            "type": "image_picker",
            "id": "large_image",
            "label": "Choose the large image"
        },

        {
            "type": "select",
            "id": "large_image_position",
            "label": "Choose the position",

            "options" : [
                { "value": "left", "label": "Left" },
                { "value": "right", "label": "Right" }
            ],

            "default": "left"
        },

        {
            "type": "image_picker",
            "id": "small_image",
            "label": "Choose the small image"
        },

        /* Text Fields Config */
        { "type": "header", "content": "Text Fields" },

        {
            "type": "text",
            "id": "subheader",
            "label": "Subheader (optional)"
        },

        {
            "type": "text",
            "id": "heading",
            "label": "Heading (optional)"
        },

        {
            "type": "richtext",
            "id": "body",
            "label": "Body Text (optional)"
        },

          /* Button Config*/
        { "type":"header", "content": "Button" },

        {
          "type": "text",
          "id": "button_label",
          "label": "Button label"
        },
    
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }

    ],
  
    "presets": [
      {
        "name": "Image collage and Text",
        "category": "Image"
      }
    ]
  }
  {% endschema %}
  